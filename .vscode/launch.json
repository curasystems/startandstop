  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests (Windows)",
      "program": "${workspaceRoot}/node_modules/tape/bin/tape",
      "args": [
        "test/**/*.spec.js"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858
    }
  ]
}